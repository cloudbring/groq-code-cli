{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "ESNext",
	  "moduleResolution": "bundler",
	  "outDir": "./dist",
	  "rootDir": ".",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "declaration": true,
	  "declarationMap": true,
	  "sourceMap": true,
	  "resolveJsonModule": true,
	  "allowSyntheticDefaultImports": true,
	  "jsx": "react-jsx",
	  "baseUrl": ".",
	  "paths": {
	    "@src/*": ["src/*"]
	  }
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  "dist"
	]
  }