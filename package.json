{
	"name": "groq-code-cli",
	"version": "1.0.2",
	"license": "MIT",
	"bin": {
		"groq": "dist/core/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"lint": "xo src/**/*.ts src/**/*.tsx",
		"lint:test": "xo test/**/*.ts test/**/*.tsx --config=tsconfig.test.json",
		"test": "ava",
		"test:unit": "ava test/unit/**/*.test.ts",
		"test:integration": "ava test/integration/**/*.test.ts",
		"test:component": "ava test/component/**/*.test.tsx",
		"test:coverage": "c8 ava",
		"test:watch": "ava --watch",
		"test:verbose": "ava --verbose"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"groq-sdk": "^0.27.0",
		"ink": "^6.0.1",
		"meow": "^11.0.0",
		"react": "^19.1.0"
	},
	"devDependencies": {
		"@ava/typescript": "^4.0.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@testing-library/react": "^16.3.0",
		"@types/mock-fs": "^4.13.4",
		"@types/react": "^19.1.8",
		"@types/sinon": "^17.0.4",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"c8": "^10.1.3",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"esmock": "^2.6.8",
		"ink-testing-library": "^3.0.0",
		"jsdom": "^26.1.0",
		"mock-fs": "^5.5.0",
		"node-pty": "^1.0.0",
		"prettier": "^2.8.7",
		"sinon": "^21.0.0",
		"strip-ansi": "^7.1.0",
		"ts-node": "^10.9.1",
		"tsx": "^4.20.3",
		"typescript": "^5.0.3",
		"xo": "^1.2.1"
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
